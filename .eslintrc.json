{
    "root": true,
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:vue/vue3-recommended",
        "@vue/typescript/recommended",
        "prettier"
    ],
    "parser": "vue-eslint-parser",
    "parserOptions": {
        "parser": "@typescript-eslint/parser"
    },
    "plugins": [
        "vue",
        "@typescript-eslint"
    ],
    "ignorePatterns": [
        "external/",
        "public/",
        "dist/",
        "*.d.ts"
    ],
    "rules": {
        "semi": "warn",
        "@typescript-eslint/semi": "warn",
        "vue/multi-word-component-names": "off",
        "vue/require-default-prop": "off"
    }
}
